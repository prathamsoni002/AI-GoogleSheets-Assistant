{
    "manifest_version": 3,
    "name": "Google Sheets Chatbot",
    "version": "1.0",
    "description": "A chatbot floating icon for Google Sheets",
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["https://docs.google.com/spreadsheets/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "permissions": ["activeTab", "storage"],
    "host_permissions": ["http://localhost:5001/*", "https://docs.google.com/spreadsheets/*", "https://7b227064897c.ngrok-free.app/*"],
    "web_accessible_resources": [
      {
      "resources": ["icon.png", "logo.png"],
      "matches": ["<all_urls>"]
      }
    ]

  }